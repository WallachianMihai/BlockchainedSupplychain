<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.producergui.controller.ContractController"
      style="-fx-background-color: #f0f0f0; -fx-padding: 20px;">

    <TableView fx:id="contractTable" editable="true"
               style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px;">
        <columns>
            <TableColumn fx:id="customerCol" text="Customer Name" />
            <TableColumn fx:id="productCol" text="Product Name" />
            <TableColumn fx:id="quantityCol" text="Quantity" />
        </columns>
    </TableView>

    <HBox spacing="10.0" style="-fx-alignment: center;">
        <Button fx:id="viewContractButton" text="View Contract" onAction="#handleViewContract"
                style="-fx-background-color: #3f51b5; -fx-text-fill: white; -fx-font-weight: bold;" />
    </HBox>
</VBox>