<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1">
    <TabPane fx:id="mainTabPane">
        <Tab text="Products">
            <content>
                <fx:include source="product-view.fxml" />
            </content>
        </Tab>
        <Tab text="Inventory">
            <content>
                <fx:include source="inventory-view.fxml" />
            </content>
        </Tab>
        <Tab text="Contracts">
            <content>
                <fx:include source="contract-view.fxml" />
            </content>
        </Tab>
        <Tab text="Customers">
            <content>
                <fx:include source="customer-view.fxml" />
            </content>
        </Tab>
    </TabPane>
</VBox>
